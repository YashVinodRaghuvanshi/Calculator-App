<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F2C3B"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/key_layout"
        android:layout_marginBottom="24dp"
        >
        <TextView
            android:id="@+id/display_ans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textAlignment="textEnd"
            android:paddingEnd="32dp"
            android:textSize="45sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/display_calculations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textAlignment="textEnd"
            android:paddingEnd="32dp"
            android:textSize="20sp"
            android:textColor="#7C5EFD"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/key_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_marginBottom="24dp"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/num_ac"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/num_ac"

                />
            <ImageView

                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"

                />
            <ImageView
                android:id="@+id/num_modulo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_modulo"

                />
            <ImageView
                android:id="@+id/num_divide"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_divide"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/num_7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/num_7"

                />
            <ImageView
                android:id="@+id/num_8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_8"
                />
            <ImageView
                android:id="@+id/num_9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_9"

                />
            <ImageView
                android:id="@+id/num_multiply"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_multiply"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/num_4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/num_4"

                />
            <ImageView
                android:id="@+id/num_5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_5"
                />
            <ImageView
                android:id="@+id/num_6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_6"

                />
            <ImageView
                android:id="@+id/num_minus"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_minus"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/num_1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/num_1"

                />
            <ImageView
                android:id="@+id/num_2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_2"
                />
            <ImageView
                android:id="@+id/num_3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_3"

                />
            <ImageView
                android:id="@+id/num_add"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_add"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/num_0"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/num_0"

                />
            <ImageView
                android:id="@+id/num_dot"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_dot"
                />
            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"

                />
            <ImageView
                android:id="@+id/num_equels"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/num_equel"
                />
        </LinearLayout>

    </LinearLayout>


    


    
</RelativeLayout>